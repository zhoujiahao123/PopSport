<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="login_style">
        <item name="android:background">@color/blue_normal</item>
    </style>
    <style name="image_style">
        <item name="android:src">@drawable/pop_log2</item>
        <item name="android:layout_marginTop">@dimen/image_pad_top</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="image_name">
        <item name="android:src">@drawable/userlogo1</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="image_password">
        <item name="android:src">@drawable/passwordlogo1</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="layout_input">
        <item name="android:textColor">@color/white_normal</item>
        <item name="android:textColorHint">@color/white_normal</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="btn_style">
        <item name="android:background">@drawable/state_btn_login</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white_normal</item>
        <item name="android:textSize">21sp</item>
    </style>
    <style name="layout_style_qq">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/state_login_alter</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="layout_style_wechat">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/state_login_alter</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
    </style>

    //个人信息中的一些自定义控件属性
    <style name="layout_style_square">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_square</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    //控件中图片的style
    <style name="PhotoStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/image_size40</item>
        <item name="android:layout_height">@dimen/image_size40</item>
    </style>
    //控件中文字的style
    <style name="TvStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/spacing_small</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    //天气
    <style name="weather_style">
        <item name="android:layout_marginBottom">@dimen/spacing_huger_weather</item>

    </style>
    //
    <style name="weather_day">
        <item name="android:textColor">@color/white_light</item>
        <item name="android:textSize">@dimen/forecast_day_size</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
//以下全是forecast的style
    <style name="weather_image">
        <item name="android:layout_marginLeft">@dimen/forecast_image_margin_left</item>
    </style>

    <style name="weather_weather">
        <item name="android:layout_marginLeft">@dimen/forecast_weather_margin_left</item>
        <item name="android:textColor">@color/white_light</item>
        <item name="android:textSize">@dimen/forecast_weather_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="weather_temp">
        <item name="android:layout_marginLeft">@dimen/forecast_temp_margin_left</item>
        <item name="android:textColor">@color/white_light</item>
        <item name="android:textSize">@dimen/forecast_temp_size</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
//以上
    //以下全是life的style
    <style name="weather_life_left">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_tiny</item>
        <item name="android:layout_marginRight">@dimen/little_size</item>
        <item name="android:background">@color/white_light</item>
    </style>
    <style name="weather_life_left_top">
        <item name="android:layout_marginTop">@dimen/spacing_tiny</item>
        <item name="android:layout_marginLeft">@dimen/spacing_tiny</item>
        <item name="android:layout_marginRight">@dimen/little_size</item>
        <item name="android:background">@color/white_light</item>
    </style>

    <style name="weather_life_right_top">
        <item name="android:layout_marginTop">@dimen/spacing_tiny</item>
        <item name="android:layout_marginLeft">@dimen/little_size</item>
        <item name="android:layout_marginRight">@dimen/spacing_tiny</item>
        <item name="android:background">@color/white_light</item>
    </style>
    <style name="weather_life_right">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">@dimen/little_size</item>
        <item name="android:layout_marginRight">@dimen/spacing_tiny</item>
        <item name="android:background">@color/white_light</item>
    </style>

    <style name="weather_life_text">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:textColor">@color/white_light</item>
    </style>
    <style name="weather_life_text_des">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@color/white_light</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="CustomActionBarTheme" parent="@style/AppTheme">
        <item name="android:actionBarSize">45dp</item>
        <item name="actionBarSize">45dp</item>
    </style>


    <!--创建跑房中的文字style-->
    <style name="CreateRUnHouseTextStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/two_class_text</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>
    <!--toolbar textview style-->
    <style name="ToolbarTextViewStyle">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/ghost_white</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <!--图片详情-->
    <style name="AppTheme.ActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">#fff</item>
        <item name="actionMenuTextAppearance">@style/AppTheme.actionMenuTextSize</item>
    </style>

    <style name="AppTheme.actionMenuTextSize" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    //我的任务
    <style name="TaskStyleTitle">
    <item name="android:layout_marginLeft">@dimen/spacing_small</item>
    <item name="android:layout_marginTop">@dimen/spacing_normal</item>
    <item name="android:textSize">@dimen/font_large</item>
    <item name="android:textColor">@color/white_light</item>
</style>

    <style name="TaskStyleDetail">
        <item name="android:layout_marginLeft">@dimen/spacing_small</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/white_light</item>
    </style>

    <style name="CustomLineColor" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/blue</item>
    </style>
    <!--编写话题的toolbar 样式-->
    <style name="WriteMsgToolbarCanUse" parent="AppTheme.ActionBar">
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>
    <style name="WriteMsgToolbarCannotUse" parent="AppTheme.ActionBar">
        <item name="actionMenuTextColor">@color/gray_light</item>
       <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <!--RunActivity 文字style-->
    <style name="RunActivityLeftTextStyle" >
        <item name="android:textColor">@color/three_class_text_color</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:layout_marginLeft">@dimen/spacing_large</item>
    </style>
    <style name="RunActivityRightTextStyle">
        <item name="android:textColor">@color/two_class_text_color</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="RunActivityActionBarTheme" parent="AppTheme">
        <item name="colorPrimaryDark">#2B698F</item>
    </style>
    <style name="RunActivityToolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/spacing_normal</item>
    </style>


    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!--dialog-->
    <style name="run_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
