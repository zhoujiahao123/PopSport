<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="login_style">
        <item name="android:background">@color/blue_normal</item>
    </style>
    <style name="image_style">
        <item name="android:src">@drawable/running</item>
        <item name="android:paddingTop">@dimen/image_pad_top</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="image_name">
        <item name="android:src">@drawable/username</item>
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
        <item name="android:paddingRight">@dimen/spacing_normal</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="image_password">
        <item name="android:src">@drawable/password</item>
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="layout_input">
        <item name="android:textColor">@color/white_normal</item>
        <item name="android:textColorHint">@color/white_normal</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="btn_style">
        <item name="android:background">@drawable/state_btn_login</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white_normal</item>
        <item name="android:textSize">21sp</item>
    </style>
    <style name="layout_style_qq">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/state_login_alter</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="layout_style_wechat">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/state_login_alter</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
    </style>

    //个人信息中的一些自定义控件属性
    <style name="layout_style_square">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_square</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    //控件中图片的style
    <style name="PhotoStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/image_size40</item>
        <item name="android:layout_height">@dimen/image_size40</item>
    </style>
    //控件中文字的style
    <style name="TvStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/spacing_small</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    //天气
    <style name="weather_style">
        <item name="android:layout_marginBottom">@dimen/spacing_huger_weather</item>

    </style>



</resources>
