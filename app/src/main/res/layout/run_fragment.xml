<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--头部-->
    <LinearLayout
        android:background="@color/pink_background_color"

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/current_miles_tv"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/font_super_huger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="今日已完成(m)"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/small_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:background="@color/pink_background_color"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">

            <TextView
                android:id="@+id/history_best_miles"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="0"
                android:textSize="@dimen/font_below_huge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="单次最佳"
                android:textColor="@color/small_title"
                android:textSize="@dimen/font_small"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp">
            <TextView
                android:id="@+id/history_average_miles"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="10"
                android:textSize="@dimen/font_below_huge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="历史平均"
                android:textColor="@color/small_title"
                android:textSize="@dimen/font_small"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <!--柱形图-->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/charter"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"></com.github.mikephil.charting.charts.BarChart>

</LinearLayout>

